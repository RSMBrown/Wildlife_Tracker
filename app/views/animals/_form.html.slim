div 
    =form_with model: @animal do |form|

        =form.label :region
        =form.select :region_id, Region.all.collect { |region| [region.region, region.id] }, include_blank: true

        br 

        =form.label :Animal
        =form.text_field :name 
            -@animal.errors.full_messages_for(:name).each do |message|
                =message 

        br

        =form.submit